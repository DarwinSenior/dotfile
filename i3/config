exec --no-startup-id xrandr --output eDP1 --mode 1280x800 --output HDMI2 --auto --right-of eDP1
exec --no-startup-id nmcli con up TARDIS
exec_always --no-startup-id feh --bg-scale $HOME/.config/i3/background.png
exec_always --no-startup-id "killall -q compton; compton --config $HOME/.config/i3/compton.conf"
exec_always --no-startup-id "$HOME/.config/i3/i3scripts/autoname_workspaces.py &"
